<?xml version="1.0" encoding="utf-8"?>
<com.kyletung.commonlib.load.ClassicRefreshHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/load_header_height"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tvRefresh"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="?attr/colorAccent"/>

        <ImageView
            android:id="@+id/ivArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/base_dimen_8dp"
            android:layout_marginRight="@dimen/base_dimen_8dp"
            android:layout_toLeftOf="@id/tvRefresh"
            android:layout_toStartOf="@id/tvRefresh"
            android:background="@mipmap/load_pull_arrow"/>

        <ImageView
            android:id="@+id/ivSuccess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/base_dimen_8dp"
            android:layout_marginRight="@dimen/base_dimen_8dp"
            android:layout_toLeftOf="@id/tvRefresh"
            android:layout_toStartOf="@id/tvRefresh"
            android:background="@mipmap/load_refresh_success"/>

        <ProgressBar
            android:id="@+id/progressbar"
            style="?android:attr/progressBarStyleSmallInverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/base_dimen_8dp"
            android:layout_marginRight="@dimen/base_dimen_8dp"
            android:layout_toLeftOf="@id/tvRefresh"
            android:layout_toStartOf="@id/tvRefresh"/>

    </RelativeLayout>

</com.kyletung.commonlib.load.ClassicRefreshHeaderView>