<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/base_dimen_2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/base_dimen_8dp"
            android:background="@drawable/search_bar_background"
            android:elevation="@dimen/base_dimen_4dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="@dimen/search_icon_size"
                android:layout_height="@dimen/search_icon_size"
                android:layout_marginLeft="@dimen/base_dimen_8dp"
                android:layout_marginRight="@dimen/base_dimen_8dp"
                android:src="@drawable/search_icon"/>

            <EditText
                android:id="@+id/search_content"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"/>

        </LinearLayout>

    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/search_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:elevation="@dimen/base_dimen_2dp"
        app:tabIndicatorColor="@color/base_color_white"
        app:tabSelectedTextColor="@color/top_bar_text_selected_color"
        app:tabTextColor="@color/top_bar_text_unselected_color">
    </android.support.design.widget.TabLayout>

    <com.kyletung.simplebookmovie.view.TabViewPager
        android:id="@+id/search_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.kyletung.simplebookmovie.view.TabViewPager>

</LinearLayout>