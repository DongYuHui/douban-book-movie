<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- BaseColor -->
        <item name="colorAccent">@color/main_accent</item>
        <item name="colorPrimary">@color/main_color</item>
        <item name="colorPrimaryDark">@color/main_color_dark</item>
        <!-- Window Background -->
        <item name="android:windowBackground">@color/main_background</item>
        <!-- Toolbar -->
        <item name="commonToolbarTheme">@style/ToolbarTheme</item>
        <item name="commonToolbarBackground">@color/main_color</item>
    </style>

    <!-- Start Activity -->
    <style name="StartTheme" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launcher_screen</item>
    </style>

    <!-- Login Activity -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="colorAccent">@color/login_view_color</item>
    </style>

</resources>
